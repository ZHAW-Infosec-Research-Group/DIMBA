<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_auth_pay_slip_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ch.zhaw.securitylab.DIMBA.activity.pay.ActivityAuthPaySlipInfo">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <TextView
                android:text="@string/payslip_info_back"
                android:layout_height="wrap_content" android:id="@+id/paySlipInfoReturn" android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/paySlipButtonInfoSample"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="@string/payslip_info_sample"
                android:layout_height="wrap_content" android:id="@+id/paySlipInfoSample" android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="64dp"
                app:layout_constraintTop_toBottomOf="@+id/paySlipButtonInfoSave"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/paySlipButtonInfoSample"/>
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:id="@+id/paySlipButtonInfoSample"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textStyle="bold"
                android:textAlignment="center" android:fontFamily="@font/dimba_text"
                android:textColor="@android:color/background_light"
                app:srcCompat="@drawable/ic_help_outline_black_24dp" android:layout_marginTop="64dp"
                app:layout_constraintTop_toBottomOf="@+id/paySlipButtonInfoSave"/>
        <TextView
                android:text="@string/payslip_info_load"
                android:layout_height="wrap_content" android:id="@+id/paySlipInfoLoad"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                app:layout_constraintEnd_toStartOf="@+id/paySlipButtonInfoLoad" android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:id="@+id/paySlipButtonInfoLoad"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textStyle="bold"
                android:textAlignment="center" android:fontFamily="@font/dimba_text"
                android:textColor="@android:color/background_light"
                app:srcCompat="@drawable/ic_file_download_black_24dp"/>
        <TextView
                android:text="@string/payslip_info_save"
                android:layout_height="wrap_content" android:id="@+id/paySlipInfoSave" android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="92dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/paySlipButtonInfoLoad"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/paySlipButtonInfoSave"
                app:layout_constraintHorizontal_bias="0.687" app:layout_constraintVertical_bias="0.0"/>

        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_background"
                android:id="@+id/paySlipButtonInfoSave"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textStyle="bold"
                android:textAlignment="center" android:fontFamily="@font/dimba_text"
                android:textColor="@android:color/background_light"
                app:srcCompat="@drawable/ic_file_upload_black_24dp" android:layout_marginTop="92dp"
                app:layout_constraintTop_toBottomOf="@+id/paySlipButtonInfoLoad"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
