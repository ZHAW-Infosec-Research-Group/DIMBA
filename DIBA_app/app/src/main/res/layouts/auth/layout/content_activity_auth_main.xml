<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_activity_auth_main"
        tools:context="ch.zhaw.securitylab.DIBA.activity.auth.ActivityAuthMain">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="118dp"
        android:layout_height="95dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />



    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp" app:srcCompat="@drawable/ic_account_balance_wallet_black_24dp"
        android:id="@+id/mainImageBalance"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/mainBalanceFetch" android:hapticFeedbackEnabled="true"/>
    <Button
        android:text="Fetch Balance"
        android:layout_height="50dp"
        android:id="@+id/mainBalanceFetch" android:background="@color/colorBalance"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:fontFamily="@font/inbank_text" android:textSize="24sp" android:textStyle="bold"
        android:textColor="@android:color/background_light" android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/mainImageBalance"
        android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="360dp"
        android:hapticFeedbackEnabled="true"
        android:layout_marginTop="2dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>



    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp" app:srcCompat="@drawable/ic_payment_black_48dp"
        android:id="@+id/mainImagePay"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
        android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/mainImageBalance"
        android:background="@android:color/transparent"/>
    <Button
            android:text="Payments"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:id="@+id/mainGoPayment"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:fontFamily="@font/biorhyme_extralight" android:textSize="24sp" android:textStyle="bold"
            android:textColor="@android:color/background_light" android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/mainBalanceFetch"
            app:layout_constraintStart_toEndOf="@+id/mainImagePay" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>




    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp" app:srcCompat="@drawable/ic_account_balance_black_48dp"
        android:id="@+id/mainImageInvest"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/mainImagePay"/>
    <Button
            android:text="Investment"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/mainGoInvestment" android:background="@drawable/button_background"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:fontFamily="@font/inbank_text" android:textSize="24sp" android:textStyle="bold"
            android:textColor="@android:color/background_light" android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/mainGoPayment"
            app:layout_constraintStart_toEndOf="@+id/mainImageInvest" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>




    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp" app:srcCompat="@drawable/ic_message_black_48dp"
        android:id="@+id/mainImageMessage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/mainImageStockMarket" />
    <Button
            android:text="Messages"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/mainGoMessages" android:background="@drawable/button_background"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:fontFamily="@font/inbank_text" android:textSize="24sp" android:textStyle="bold"
            android:textColor="@android:color/background_light" android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/mainImageMessage" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/mainStockMarket"/>







    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp" app:srcCompat="@drawable/ic_trending_up_48dp"
        android:id="@+id/mainImageStockMarket"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/mainImageInvest" />
    <Button
        android:text="Stock Market"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/mainStockMarket" android:background="@drawable/button_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:fontFamily="@font/inbank_text" android:textSize="24sp" android:textStyle="bold"
        android:textColor="@android:color/background_light" android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/mainImageLogout"
        android:layout_marginStart="16dp" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/mainGoInvestment"/>






    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp" app:srcCompat="@drawable/ic_lock_black_48dp"
        android:id="@+id/mainImageLogout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/mainImageMessage"/>
    <Button
            android:text="Log out"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/mainGoLogout" android:background="@drawable/button_background"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:fontFamily="@font/inbank_text" android:textSize="24sp" android:textStyle="bold"
            android:textColor="@android:color/background_light" android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/mainImageLogout"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/mainGoMessages"/>


</androidx.constraintlayout.widget.ConstraintLayout>