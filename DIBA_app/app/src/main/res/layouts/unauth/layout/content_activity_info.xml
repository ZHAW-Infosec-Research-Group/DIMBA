<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ch.zhaw.securitylab.DIBA.activity.unauth.ActivityInfo">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:layout_marginRight="16dp"
                                                 android:layout_marginLeft="16dp"
                                                 android:layout_marginEnd="16dp"
    >
        <TextView
                android:text="@string/about_the_app_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoSubTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:text="@string/about_the_app_intention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoIntention"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/infoSubTitle"/>
        <TextView
                android:text="@string/about_the_app_training"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoTraining"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/infoIntention"/>
        <TextView
                android:text="@string/about_the_app_attacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoAttacks"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/infoTraining" android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/about_the_app_runtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoRunTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                android:textSize="16sp" android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/infoAttacks"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/about_the_app_run_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoRunText"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/infoRunTitle" android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/about_the_app_run_communication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoRunCommunication"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/infoRunText" android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/about_the_app_metatitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoMetaTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                android:textSize="16sp" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/infoRunCommunication"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/about_the_app_meta_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoMetaText"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/infoMetaTitle" android:layout_marginTop="8dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:id="@+id/infoMetaPictuture"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/infoMetaText"
                app:srcCompat="@drawable/metasettings" android:layout_marginTop="-100dp"/>
        <TextView
                android:text="@string/about_the_app_meta_text_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoMetaTextIP"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/infoMetaPictuture" android:layout_marginTop="0dp"/>
        <TextView
                android:text="@string/about_the_app_meta_text_difficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoMetaTextDifficulty"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/infoMetaTextIP" android:layout_marginTop="0dp"/>
        <TextView
                android:text="@string/about_the_app_meta_text_timeout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoMetaTextTimeout"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/infoMetaTextDifficulty" android:layout_marginTop="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
