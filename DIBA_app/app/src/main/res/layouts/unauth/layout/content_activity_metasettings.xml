<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.zhaw.securitylab.DIBA.activity.unauth.ActivityMetasettings">

    <TextView
            android:id="@+id/metasettingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:text="Meta settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/inbank_text"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/metasettingsBoxIp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metasettingsText">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/metasettingsIp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IP"
                android:inputType="text|textVisiblePassword" android:fontFamily="@font/inbank_text"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/metasettingsButtonTest"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/inbank_text"
        android:text="Ping Server"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metasettingsBoxTimeout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/metasettingsBoxDifficulty"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metasettingsBoxIp">

        <TextView
                android:id="@+id/metasettingsDifficultyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Difficulty:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/inbank_text"/>

        <Spinner
            android:id="@+id/metasettingsSpinnerDifficulty"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/metasettingsBoxTimeout"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/metasettingsBoxDifficulty" android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/metasettingsTimeout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Timeout Ms"
                android:inputType="text|number" android:fontFamily="@font/inbank_text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:text="Save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:textColor="@android:color/background_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/metasettingsButtonSave"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/inbank_text" android:textSize="24sp" android:textStyle="bold"
            android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/metasettingsButtonTest"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Reset App"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:textColor="@android:color/background_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/metasettingsButtonReset"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/inbank_text" android:textSize="24sp" android:textStyle="bold"
            android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
