<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ch.zhaw.securitylab.DIBA.activity.unauth.ActivitySettings">

    <TextView
        android:id="@+id/settingsTextLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="216dp"
        android:fontFamily="@font/inbank_text"
        android:text="Login settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settingsTextAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/inbank_text"
        android:text="Connection settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsRememberCheck" />


    <TextView
        android:id="@+id/settingsDebugText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="208dp"
        android:fontFamily="@font/inbank_text"
        android:text="Debug settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsRootDetection" />

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/settingsBoxPackage" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/settingsDebugText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Package" android:id="@+id/settingsDebugPackage"
                android:text="ch.zhaw.securitylab.DIBA"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/settingsBoxClass"
            app:layout_constraintTop_toBottomOf="@+id/settingsBoxPackage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Class" android:id="@+id/settingsDebugClass"
                android:text="ch.zhaw.securitylab.DIBA.ActivityAuthPayAccept"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:text="Reset to Default"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:id="@+id/settingsResetDefault"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/paySlipButtonSave"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:fontFamily="@font/inbank_text"
            android:textSize="24sp"
            android:textColor="@android:color/background_light" android:textStyle="bold"
            android:textAlignment="center" android:elevation="@dimen/text_margin"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <CheckBox
        android:id="@+id/settingsRememberCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inbank_text"
        android:text="Remember my Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsTextLogin" />

    <CheckBox
        android:id="@+id/settingsAutoUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inbank_text"
        android:text="Auto Update Lists"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsTextAuto" />

    <TextView
        android:id="@+id/settingsRootDetection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="204dp"
        android:fontFamily="@font/inbank_text"
        android:text="Root Detection"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsAutoUpdate" />

    <CheckBox
        android:id="@+id/settingsRootDetectionBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inbank_text"
        android:text="Disable"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsRootDetection" />
</androidx.constraintlayout.widget.ConstraintLayout>
